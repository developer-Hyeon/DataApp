<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/messageItem_linearlayout_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/messageItem_linearlayout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/messageItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="2019년 12월 31일 수요일"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/date_textview"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/messageItem_linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout

            android:id="@+id/messageItem_linearlayout_left_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">



            <sinabro.today.custom.CustomImageView2
                android:id="@+id/messageItem_imageview_profile"
                android:layout_gravity="top"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <LinearLayout
                android:id="@+id/linearlayout_message"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/messageItem_textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="이름" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/messageItem_textView_left_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/leftbubble"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:maxWidth="210dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom">

                        <TextView

                            android:id="@+id/messageItem_textview_readCounter_left"
                            android:text="1"
                            android:textColor="@android:color/holo_orange_light"
                            android:textSize="9dp"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            />

                        <TextView
                            android:id="@+id/messageItem_textview_left_timestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2011.11.11 11:11"
                            android:layout_marginLeft="2dp"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="9dp"
                            />



                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>




        <LinearLayout

            android:id="@+id/messageItem_linearlayout_right_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">

                    <TextView

                        android:id="@+id/messageItem_textview_readCounter_right"
                        android:text="1"
                        android:layout_gravity="right"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="9dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/messageItem_textview_right_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2011.11.11 11:11"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="9dp"
                        android:layout_marginRight="2dp"
                        />



                </LinearLayout>

                <TextView
                    android:id="@+id/messageItem_textView_right_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rightbubble"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="메"
                    android:maxWidth="210dp"
                    android:textColor="#FFFFFF"
                    />

            </LinearLayout>


        </LinearLayout>








    </LinearLayout>


    <LinearLayout
        android:id="@+id/messageItem_linearlayout_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/messageItem_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="남궁현님이 대화방을 나가셨습니다."
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/date_textview"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            >

        </TextView>
    </LinearLayout>
</LinearLayout>

